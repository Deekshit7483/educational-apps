<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_item"
			android:layout_width="270dp"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:padding="4dp"
				android:background="#EEEEEE"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview2"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:text="Telme"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#65A9E0"
					android:singleLine="true" />
				<LinearLayout
					android:id="@+id/linear_msg"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="bottom"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/tx_sender_message"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="3dp"
						android:text="Hello how are you\?"
						android:textSize="16sp"
						android:textColor="#000000"
						android:layout_gravity="center_horizontal|center_vertical"
						android:layout_weight="1" />
					<LinearLayout
						android:id="@+id/linear4"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="bottom"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/tx_msg_time"
							android:focusable="false"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5dp"
							android:gravity="bottom"
							android:text="11:10 PM"
							android:textSize="12sp"
							android:textColor="#9E9E9E" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/l_voice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
				android:padding="5dp"
				android:background="#FFFFFF"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/im_play"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="5dp"
					android:src="@drawable/ic_play_arrow_white"
					android:scaleType="center" />
				<SeekBar
					android:id="@+id/seekbar1"
					android:focusable="false"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:padding="8dp" />
				<TextView
					android:id="@+id/tx_voice_name"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="3:28"
					android:textSize="14sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_file"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
				android:padding="5dp"
				android:background="#FFFFFF"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/im_file"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:src="@drawable/icon_file_doc"
					android:scaleType="center" />
				<TextView
					android:id="@+id/tx_file_name"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="File 369324.doc"
					android:textSize="16sp"
					android:textColor="#000000"
					android:singleLine="true" />
			</LinearLayout>
			<ImageView
				android:id="@+id/thumbs"
				android:focusable="false"
				android:layout_width="200dp"
				android:layout_height="120dp"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
				android:background="#FFFFFF"
				android:src="@drawable/default_image"
				android:scaleType="center" />
			<ImageView
				android:id="@+id/imageview1"
				android:focusable="false"
				android:layout_width="180dp"
				android:layout_height="210dp"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
				android:padding="5dp"
				android:background="#FFFFFF"
				android:src="@drawable/default_image"
				android:scaleType="center" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
